if payments.length!== 0
 .box
  div
   p
    a.title-label.button#invisibleBtn ▲
    h3.title.paymentTitle 支払い条件と手段
   div#displayPaymentMethodField
    each payment in payments
      div.paymentmean
       - for (var [subKey,subValue] of Object.entries(payment))
         h3.paymentMethod.bulmalabel= subKey
         if subValue.length !==0
          table.table.paymentTable
           - for (var i =0; i < subValue.length; i++)
             tr
              th !{subValue[i].item}
              td= subValue[i].value

block append scripts
  link(rel='stylesheet', type='text/css', href='/css/invoicePaymentMethod.css')
