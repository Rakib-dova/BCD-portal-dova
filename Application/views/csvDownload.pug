extends layout

block content
  .max-width
    section.hero.is-small.is-com
      .hero-body-noImage
        .title.is-family-noto-sans 請求明細ダウンロード
        .subtitle.is-family-noto-sans CSV DOWNLOAD

    .columns.is-centered
     .column.is-11
      .box
       form#form(method="POST")
        article.panel.is-info
         h2.panel-heading 条件絞り込み
         .panel-block.mr-4
          .container
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel 請求書番号
             .field-body
               .field
                 .control.has-icons-right
                   input.input#invoiceNumber.itemForSearch(type="text" name="invoiceNumber" maxlength="100" pattern="^.{0,100}$")
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel ステータス
             .field-body
               .field
                 .control.has-icons-right
                   .select.is-fullwidth.is-multiple
                     select#status(name="status" multiple size=4)
                       each item in status
                         option= item
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel 販売/購入
             .field-body
               .field
                 .control.has-icons-right
                   .select.is-fullwidth
                     select#buyAndSell(name="buyAndSell")
                       each item in buyAndSell
                         option= item
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel 発行日
             .field-body
               .field.is-grouped.is-grouped-multiline
                 .control.is-expanded
                   input.input#minIssuedate.itemForSearch(type="date" name="minIssuedate" value= minissuedate pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
                 .control
                   div ～
                 .control.is-expanded
                   input.input#maxIssuedate.itemForSearch(type="date" name="maxIssuedate" value= maxissuedate pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel 支払期日
             .field-body
               .field.is-grouped.is-grouped-multiline
                 .control.is-expanded
                   input.input#minDueDateStart.itemForSearch(type="date" name="minDueDate" pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
                 .control
                   div ～
                 .control.is-expanded
                   input.input#maxDueDateEnd.itemForSearch(type="date" name="maxDueDate" pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
           .field.is-horizontal
             .field-label.is-normal
               label.bulmalabel 納品日
             .field-body
               .field.is-grouped.is-grouped-multiline
                 .control.is-expanded
                   input.input#minDeliveryDate.itemForSearch(type="date" name="minDeliveryDate" pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
                 .control
                   div ～
                 .control.is-expanded.pb-4
                   input.input#maxDeliveryDate.itemForSearch(type="date" name="maxDeliveryDate" pattern="^(19|20)\\d{2}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[0-1])$")
        .field.is-grouped.is-grouped-centered
          .control.mx-4
            a.button.is-info#submit(type="submit")  CSVダウンロード

    include footer

block append scripts
  //- 画面のJSファイル
  script(src="/js/csvDownload-page.js")
