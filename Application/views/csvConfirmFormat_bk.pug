extends layout

block content
  .hero.is-large
    .hero-body
      .container

  .section.is-overlay.mt-6
    .container.is-max-widescreen.is-family-noto-sans
      form#form(action="#")
        article.panel.is-info
          h2.panel-heading アップロードフォーマット設定 確認
          .panel-block
            .container
             .columns.is-centered: .column.is-four-fifths
              .field.card
                .card-content.padding-left-90p
                  .title.is-5 基本情報
                  .field
                    label(for="uploadFormatItemName") 設定名称
                    input.width-50.float-right.margin-right-20(name='uploadFormatItemName' value=uploadFormatItemName readonly)
                  .field
                    label(for="uploadType").input-label アップロード種別
                    input.width-50.float-right.margin-right-20(name='uploadType' value=uploadType readonly)
           
              .field.card
                .card-content.padding-left-90p
                  details(open)
                    summary.title.is-5 明細-税 識別子
                    each tax in csvTax
                      .field
                        label.margin-top-10p(for=tax.id)= tax.name
                        if tax.id==''
                          input.width-50.float-right.margin-right-20(id=tax.id type="text" name=tax.id value='' readonly)
                        else
                          input.width-50.float-right.margin-right-20(id=tax.id type="text" name=tax.id value=tax.id readonly)
              .field.card
                .card-content.padding-left-90p
                  details(open)
                    summary.title.is-5 明細-単位 識別子
                    each unit in csvUnit
                      .field 
                        label.margin-top-10p(for=unit.id)= unit.name
                        if unit.id==''
                          input.width-50.float-right.margin-right-20(id=unit.id type="text" name=unit.id value='' readonly)
                        else
                          input.width-50.float-right.margin-right-20(id=unit.id type="text" name=unit.id value=unit.id readonly)


              .columns
                .column                 
                  .title.text-center.is-5 請求書データ用フォーマット
                  .box
                    table.table.is-fullwidth.is-hoverable
                      thead
                        tr
                          th 項目名
                      tbody
                        tr
                          th 
                            label.input-label 発行日（必須）
                        tr
                          th
                            label.input-label 請求書番号（必須）
                        tr
                          th
                            label.input-label テナントID（必須）
                        tr
                          th
                            label.input-label 支払期日
                        tr
                          th 
                            label.input-label 納品日
                        tr
                          th 
                            label.input-label 備考
                        tr
                          th
                            label.input-label 銀行名
                        tr
                          th
                            label.input-label 支店名
                        tr
                          th
                            label.input-label 科目
                        tr
                          th 
                            label.input-label 口座番号
                        tr
                          th 
                            label.input-label 口座名義
                        tr
                          th
                            label.input-label その他特記事項
                        tr
                          th
                            label.input-label 明細-項目ID（必須）
                        tr
                          th
                            label.input-label 明細-内容（必須）
                        tr
                          th 
                            label.input-label 明細-数量（必須）
                        tr
                          th
                            label.input-label 明細-単位（必須）
                        tr
                          th
                            label.input-label 明細-単価（必須）
                        tr
                          th 
                            label.input-label 明細-税（消費税／軽減税率／不課税／免税／非課税）
                        tr
                          th
                            label.input-label 明細-備考
                .column
                  .title.text-center.is-5 取込データ
                  .box
                    table.table.is-fullwidth.is-hoverable
                      thead
                        tr
                          th.text-center 項目名
                          th.text-center データ内容
                      tbody
                        each torikomi in torikomiData
                          tr
                            th.text-center#dataIndex= torikomi.item
                            th.text-center#dataItem= torikomi.value

          .field.is-grouped.is-grouped-centered
            .control
              .column
                div.button-area
                  a.button.mr-6#return-btn.cancel-button(href='uploadFormat') 戻る
                  button.button.is-success.success-button#submit(type="submit" formaction="/csvBasicFormat" formmethod="POST") 設定
       
      include footer

block append scripts
  script(src="/js/csvBasicFormat-page.js")