extends layout

block vars
  - var standard = '030' // スタンダードプラン
  - var introduction = '020' // 導入支援サービス

block content
  .max-width
    section.hero.is-small.is-com
      .hero-body-noImage
        .title.is-family-noto-sans #{title}
        .subtitle.is-family-noto-sans #{engTitle}

  .section#termBox
    .is-family-noto-sans.contractWidth.mb-5
      form#form(method="post")
        article.panel.is-info
          h2.panel-heading 有料プランご利用にあたって
          .panel-block
            .container
              .columns.is-centered: .column.mt-4.pb-0
                .field.is-grouped.is-grouped-left.is-block.box
                  h3 ご利用希望サービス
                    span （必須）
                  .termWrap.my-5  
                    label.checkbox
                      input.serviceCheckboxes(type='checkbox', name='services', value=standard, disabled=paidServiceInfo.standardDisabled, checked=paidServiceInfo.serviceType===standard)
                      span.termCheck スタンダードプラン
                    label.checkbox
                      input.serviceCheckboxes(type='checkbox', name='services', value=introduction, disabled=paidServiceInfo.introductionSupportDisabled, checked=paidServiceInfo.serviceType===introduction)
                      span.termCheck 導入支援サービス

                .field.is-grouped.is-grouped-left.is-block.mt-6
                  h3.my-3.has-text-centered 重要事項説明
                .serviceBox.mb-5#standard(class=paidServiceInfo.serviceType===standard ? '' :'is-hidden')    
                  h3.mb-3 スタンダードプラン
                  p スタンダードプランの重要事項説明が入ります。テキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキスト
                .serviceBox.mb-6#introductionSupport(class=paidServiceInfo.serviceType===introduction ? '' :'is-hidden')    
                  h3.mb-3 導入支援サービス
                  p 導入支援サービスの重要事項説明が入ります。テキストテキストテキストテキストテキストテテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストテキストキストテキスト

                .termText
                  p.has-text-centered.mb-1 デジタルトレードアプリ利用規約につきましては下記リンクよりご確認ください。
                  a.is-inline-flex.is-justify-content-center.is-align-items-center.iconLink(href='/html/terms-of-service_20220419.pdf' target="_blank" rel="noopener noreferrer")
                    span.panel-icon
                      i.fas.fa-chevron-circle-right
                    p デジタルトレードアプリ利用規約   
              .columns.is-centered: .column.is-four-fifths
                .field.is-horizontal.is-grouped.is-grouped-centered
                  .control: label.checkbox
                    input(type="hidden" name="_csrf" value=csrfToken)
                    input.is-normal#check(name="termsCheck" type="checkbox" required="required")
                  span.checkboxtext 利用規約に同意します
              .columns.is-centered: .column.is-four-fifths.mb-6.mt-4
                .field.is-grouped.is-grouped-centered
                  .control
                    button.button.is-link#next-btn(type="submit" formaction="/paidServiceRegister/showForm" disabled) お申し込み内容入力へ
    include footer

block append scripts
  link(rel='stylesheet', type='text/css', href='/css/contractCancellation.css')
  link(rel='stylesheet', type='text/css', href='/css/paidServiceRegister.css')
  script(src="/js/common/common.js")
